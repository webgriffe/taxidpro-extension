<?xml version="1.0" encoding="utf-8"?>
<config>
    <modules>
        <Webgriffe_TaxIdPro>
            <version>2.0.0</version>
            <depends>
                <Mage_Core/>
                <Mage_Customer/>
            </depends>
        </Webgriffe_TaxIdPro>
    </modules>

    <admin>
        <fieldsets>
            <customer_dataflow>
                <!-- Tipo registrazione: Persona Fisica (0) o Giuridica (1) -->
                <is_business_address>
                    <billing>1</billing>
                    <shipping>1</shipping>
                    <mapped>1</mapped>
                </is_business_address>
                <!-- Codice Fiscale -->
                <tax_code>
                    <billing>1</billing>
                    <shipping>1</shipping>
                    <mapped>1</mapped>
                </tax_code>
                <!-- Partita IVA -->
                <vat_number>
                    <billing>1</billing>
                    <shipping>1</shipping>
                    <mapped>1</mapped>
                </vat_number>
            </customer_dataflow>
        </fieldsets>
    </admin>

    <adminhtml>
        <translate>
            <modules>
                <Webgriffe_TaxIdPro>
                    <files>
                        <default>Webgriffe_TaxIdPro.csv</default>
                    </files>
                </Webgriffe_TaxIdPro>
            </modules>
        </translate>
    </adminhtml>
    
    <global>
        <helpers>
            <webgriffe_taxidpro>
                <class>Webgriffe_TaxIdPro_Helper</class>
            </webgriffe_taxidpro>
        </helpers>

        <models>
            <webgriffe_taxidpro>
                <class>
                    Webgriffe_TaxIdPro_Model
                </class>
            </webgriffe_taxidpro>
        </models>

        <blocks>
            <webgriffe_taxidpro>
                <class>Webgriffe_TaxIdPro_Block</class>
            </webgriffe_taxidpro>
        </blocks>

        <resources>
            <webgriffe_taxidpro_setup>
                <connection>
                    <use>core_setup</use>
                </connection>

                <setup>
                    <module>Webgriffe_TaxIdPro</module>
                    <class>Mage_Customer_Model_Entity_Setup</class>
                </setup>
            </webgriffe_taxidpro_setup>
        </resources>

        <fieldsets>
            <customer_address>
                <is_business_address>
                    <to_quote_address>*</to_quote_address>
                </is_business_address>
                <tax_code>
                    <to_quote_address>*</to_quote_address>
                </tax_code>
                <vat_number>
                    <to_quote_address>*</to_quote_address>
                </vat_number>
            </customer_address>

            <sales_copy_order_billing_address>
                <is_business_address>
                    <to_order>*</to_order>
                </is_business_address>
                <tax_code>
                    <to_order>*</to_order>
                </tax_code>
                <vat_number>
                    <to_order>*</to_order>
                </vat_number>
            </sales_copy_order_billing_address>

            <sales_copy_order_shipping_address>
                <is_business_address>
                    <to_order>*</to_order>
                </is_business_address>
                <tax_code>
                    <to_order>*</to_order>
                </tax_code>
                <vat_number>
                    <to_order>*</to_order>
                </vat_number>
            </sales_copy_order_shipping_address>

            <sales_convert_quote_address>
                <is_business_address>
                    <to_order_address>*</to_order_address>
                    <to_customer_address>*</to_customer_address>
                </is_business_address>
                <tax_code>
                    <to_order_address>*</to_order_address>
                    <to_customer_address>*</to_customer_address>
                </tax_code>
                <vat_number>
                    <to_order_address>*</to_order_address>
                    <to_customer_address>*</to_customer_address>
                </vat_number>
            </sales_convert_quote_address>

            <sales_convert_order_address>
                <is_business_address>
                    <to_quote_address>*</to_quote_address>
                    <to_customer_address>*</to_customer_address>
                </is_business_address>
                <tax_code>
                    <to_quote_address>*</to_quote_address>
                    <to_customer_address>*</to_customer_address>
                </tax_code>
                <vat_number>
                    <to_quote_address>*</to_quote_address>
                    <to_customer_address>*</to_customer_address>
                </vat_number>
            </sales_convert_order_address>
        </fieldsets>

        <customer>
            <address>
                <formats>
                    <text translate="title" module="customer">
                        <title>
                            Text
                        </title>
                        <defaultFormat><![CDATA[
{{depend prefix}}{{var prefix}} {{/depend}}{{var firstname}} {{depend middlename}}{{var middlename}} {{/depend}}{{var lastname}}{{depend suffix}} {{var suffix}}{{/depend}}
{{depend company}}{{var company}}{{/depend}}
{{depend tax_code}}{{var tax_code}}{{/depend}}
{{depend vat_number}}{{var vat_number}}{{/depend}}
{{if street1}}{{var street1}}
{{/if}}
{{depend street2}}{{var street2}}{{/depend}}
{{depend street3}}{{var street3}}{{/depend}}
{{depend street4}}{{var street4}}{{/depend}}
{{if city}}{{var city}},  {{/if}}{{if region}}{{var region}}, {{/if}}{{if postcode}}{{var postcode}}{{/if}}
{{var country}}
T: {{var telephone}}
{{depend fax}}F: {{var fax}}{{/depend}}
                        ]]></defaultFormat>
                    </text>
                    <oneline translate="title" module="customer">
                        <title>
                            Text One Line
                        </title>
                        <htmlEscape>
                            true
                        </htmlEscape>
                        <defaultFormat>
                            <![CDATA[{{depend company}}{{var company}}, {{/depend}}{{depend prefix}}{{var prefix}} {{/depend}}{{var firstname}} {{depend middlename}}{{var middlename}} {{/depend}}{{var lastname}}{{depend suffix}} {{var suffix}}{{/depend}}, {{var street}}, {{var city}}, {{var region}} {{var postcode}}, {{var country}}]]>
                        </defaultFormat>
                    </oneline>
                    <html translate="title" module="customer">
                        <title>
                            HTML
                        </title>
                        <htmlEscape>
                            true
                        </htmlEscape>
                        <defaultFormat><![CDATA[
{{depend prefix}}{{var prefix}} {{/depend}}{{var firstname}} {{depend middlename}}{{var middlename}} {{/depend}}{{var lastname}}{{depend suffix}} {{var suffix}}{{/depend}}<br/>
{{depend company}}{{var company}}<br />{{/depend}}
{{depend tax_code}}{{var tax_code}}<br />{{/depend}}
{{depend vat_number}}{{var vat_number}}<br />{{/depend}}
{{if street1}}{{var street1}}<br />{{/if}}
{{depend street2}}{{var street2}}<br />{{/depend}}
{{depend street3}}{{var street3}}<br />{{/depend}}
{{depend street4}}{{var street4}}<br />{{/depend}}
{{if city}}{{var city}},  {{/if}}{{if region}}{{var region}}, {{/if}}{{if postcode}}{{var postcode}}{{/if}}<br/>
{{var country}}<br/>
{{depend telephone}}T: {{var telephone}}{{/depend}}
{{depend fax}}<br/>F: {{var fax}}{{/depend}}
            ]]></defaultFormat>
                    </html>
                    <pdf translate="title" module="customer">
                        <title>
                            PDF
                        </title>
                        <defaultFormat><![CDATA[
{{depend prefix}}{{var prefix}} {{/depend}}{{var firstname}} {{depend middlename}}{{var middlename}} {{/depend}}{{var lastname}}{{depend suffix}} {{var suffix}}{{/depend}}|
{{depend company}}{{var company}}|{{/depend}}
{{depend tax_code}}{{var tax_code}}|{{/depend}}
{{depend vat_number}}{{var vat_number}}|{{/depend}}
{{if street1}}{{var street1}}
{{/if}}
{{depend street2}}{{var street2}}|{{/depend}}
{{depend street3}}{{var street3}}|{{/depend}}
{{depend street4}}{{var street4}}|{{/depend}}
{{if city}}{{var city}},  {{/if}}{{if region}}{{var region}}, {{/if}}{{if postcode}}{{var postcode}}{{/if}}|
{{var country}}|
{{depend telephone}}T: {{var telephone}}{{/depend}}|
{{depend fax}}<br/>F: {{var fax}}{{/depend}}|
            ]]></defaultFormat>
                    </pdf>
                    <js_template template="title" module="customer">
                        <title>Javascript Template</title>
                        <defaultFormat><![CDATA[#{prefix} #{firstname} #{middlename} #{lastname} #{suffix}<br/>#{company}<br/>#{tax_code}#{vat_number}<br/>#{street0}<br/>#{street1}<br/>#{street2}<br/>#{street3}<br/>#{city}, #{region}, #{postcode}<br/>#{country_id}<br/>T: #{telephone}<br/>F: #{fax}]]></defaultFormat>
                    </js_template>
                </formats>
            </address>
        </customer>
    </global>

    <frontend>
        <layout>
            <updates>
                <webgriffe_taxidpro>
                    <file>webgriffe_taxidpro.xml</file>
                </webgriffe_taxidpro>
            </updates>
        </layout>
        <translate>
            <modules>
                <Webgriffe_TaxIdPro>
                    <files>
                        <default>Webgriffe_TaxIdPro.csv</default>
                    </files>
                </Webgriffe_TaxIdPro>
            </modules>
        </translate>
    </frontend>
</config>
